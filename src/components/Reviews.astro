---
import svgNew from '../assets/new.svg'

const testimonials = [
  { 
    comment: `“Winner of the Best Bachelor Thesis in Video Game Design & Development Degree (Gamesis 2025)”`,
    author: {
      name: `Victor Melia`,
      pos: `Gamesis 2025 — Best Bachelor Thesis`
    },
    cls: `rotate-2 -translate-y-10`
   },
   { 
    comment: `“Selected Speaker at the Spanish Video Game Congress (CEV 2023)”`,
    author: {
      name: `Victor Melia`,
      pos: `CEV 2023 — Research Presentation`
    },
    cls: `-rotate-2 -translate-x-10 z-5`
   },
   { 
    comment: `“Recognized as VFX Team Leader at BackToBits Studio”`,
    author: {
      name: `Victor Melia`,
      pos: `BackToBits Studio — VFX Lead`
    },
    cls: `rotate-2 translate-x-5 z-5`
   },
   { 
    comment: `“Winner of ‘La Triple’ for *Crónicas de Castellnovo* during the third year of the degree, recognized by UJI”`,
    author: {
      name: `Victor Melia`,
      pos: `UJI — Game Development Recognition`
    },
    cls: `-rotate-2 translate-y-10 md:translate-y-15`
   },
]
---


<section>
    <div class="max-w-4xl mx-auto pb-20 px-10 overflow-hidden">
      <div class="grid grid-cols-1 md:grid-cols-2">
        <div class="flex relative">
          <h1 class="text-3xl">Awards & Recognition</h1>
          <img src={svgNew.src} alt="arrow" width="40" class="absolute -right-3 md:-right-10 bottom-0" />
        </div>
      </div>
  
  
      <div class="grid grid-cols-1 md:grid-cols-2 py-30">
        {testimonials.map(item => ( 
          <div class={`flex flex-col gap-3 p-5 pr-15 bg-white border-2 shadow-[6px_6px_0px_rgba(0,0,0,0.3)] ${item.cls}`}>
            <p>{item.comment}</p>
            <div class="flex items-center gap-2">
              <div>
                <h3 class="font-medium">{item.author.name}</h3>
                <p>{item.author.pos}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
  
    </div>
   </section>